<Page
    x:Class="Hogwarts2._0.GStuCourses"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hogwarts2._0"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Image x:ConnectionId='2' Name="redbackground" Source="Assets/Gback.png" Stretch="Fill"/>
        <Grid x:ConnectionId='3' x:Name="Form1">
            <Image x:ConnectionId='10' x:Name="Form1Background" Source="Assets/RegisterBackground.png" HorizontalAlignment="Center" VerticalAlignment="Center" Height="756"/>
            <Grid Margin="452,93,451,692">
                <TextBlock x:ConnectionId='13' x:Name="Form1Title" Foreground="Black" FontSize="120" FontFamily="/Assets/ReginaScript.ttf#Regina Script" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Semesters"/>
            </Grid>
            <ScrollViewer x:ConnectionId='11' x:Name="Form1ScrollViewer" Margin="288,318,288,272">
                <Grid x:ConnectionId='12' x:Name="SemesterList" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="500"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </ScrollViewer>
        </Grid>
        <Grid x:ConnectionId='4' x:Name="Form2" Visibility="Visible">
            <Image x:ConnectionId='5' x:Name="Form2Background" Source="Assets/RegisterBackground.png" HorizontalAlignment="Center" VerticalAlignment="Center" Height="756"/>
            <Grid Margin="453,113,452,722">
                <TextBlock x:ConnectionId='9' x:Name="Form2Title" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" FontSize="120" Text="Courses" FontFamily="/Assets/ReginaScript.ttf#Regina Script"/>
            </Grid>
            <ScrollViewer x:ConnectionId='6' x:Name="Form2scrollviewer" Margin="288,272,288,335">
                <Grid x:ConnectionId='8' x:Name="CoursesList" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="500"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </ScrollViewer>
            <Grid Margin="1330,49,34,750">
                <Button x:ConnectionId='7' x:Name="Form2Cancel" Content="X" Foreground="Black" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="/Assets/HARRYP__.TTF#Harry P"                          />
            </Grid>
        </Grid>
    </Grid>
</Page>

