<Page
    x:Class="Hogwarts2._0.CounselorAccountSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hogwarts2._0"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Image Name="Profbackground3" Source="Assets/accountsettingsBack.png" Stretch="Fill"/>
        <Grid>
            <Grid Margin="335,58,325,117">
                <Image Name="Formbackground" Source="Assets/form1background.png" HorizontalAlignment="Center" VerticalAlignment="Center" Height="812" />
                <TextBlock x:Name="AccountSettingsFormTitle" HorizontalAlignment="Center" Text="Account Settings" Foreground="Black" FontSize="120" FontFamily="/Assets/ReginaScript.ttf#Regina Script" Margin="0,5,0,42"/>
                <Button x:Name="ChangePassword" HorizontalAlignment="Center" Foreground="Black" FontSize="36" FontFamily="/Assets/HARRYP__.TTF#Harry P" Content="Change Password" Margin="0,365,0,0" VerticalAlignment="Top" Click="ChangePassword_Click" />
                <Grid Name="ChangePasswordForm" Visibility="Collapsed" Margin="279,55,279,238">
                    <Grid Margin="-140,-18,140,18">
                        <TextBlock x:Name="OldPassword" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Old Password:" FontFamily="/Assets/HARRYP__.TTF#Harry P" FontSize="36" />
                    </Grid>
                    <Grid Margin="-146,42,146,-42">
                        <TextBlock x:Name="NewPassword" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" Text="New Password:" FontFamily="/Assets/HARRYP__.TTF#Harry P" FontSize="36" />
                    </Grid>
                    <Grid Margin="-188,244,198,23">
                        <TextBlock x:Name="ConfirmNewPassword" VerticalAlignment="Center" HorizontalAlignment="center" Foreground="Black" Text="Confirm New Password:" FontFamily="/Assets/HARRYP__.TTF#Harry P" FontSize="36"  />
                    </Grid>
                    <Grid Margin="-55,107,-226,153">
                        <PasswordBox HorizontalAlignment="Center" VerticalAlignment="Center" Name="OldPasswordInput" Foreground="Black" PlaceholderText="Enter Old Password" FontSize="28" FontFamily="/Assets/ReginaScript.ttf#Regina Script" Height="51" Width="289"/>
                    </Grid>
                    <Grid Margin="-55,173,-226,87">
                        <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" Name="NewPasswordInput" Foreground="Black" PlaceholderText="Enter New Password" FontSize="36" FontFamily="/Assets/ReginaScript.ttf#Regina Script" Height="51" Width="289"/>
                    </Grid>
                    <Grid Margin="-55,239,-226,21">
                        <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" Name="ConfirmNewPasswordInput" Foreground="Black" PlaceholderText="Confirm New Password" FontSize="36" FontFamily="/Assets/ReginaScript.ttf#Regina Script" Height="51" Width="289"/>
                    </Grid>
                    <Grid Margin="-6,415,242,-8">
                        <Button x:Name="CancelUpdatePassword" Content="Cancel" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="/Assets/HARRYP__.TTF#Harry P" FontSize="36" Foreground="Black" Click="CancelUpdatePassword_Click"/>
                    </Grid>
                    <Grid Margin="234,415,2,-8">
                        <Button x:Name="UpdatePassword" Content="Submit" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="/Assets/HARRYP__.TTF#Harry P" FontSize="36" Foreground="Black" Click="UpdatePassword_Click"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
